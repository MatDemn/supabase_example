// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum RoleType {
  FRONTEND
  BACKEND
  FULLSTACK
  DESIGN
}

enum PremiumClass {
  NONE
  BASIC
  ADVANCED
  FULL
}

model Profile {
  id        String   @id
  createdAt DateTime @default(now()) @map("created_at")
  email     String   @unique
  firstName String   
  lastName  String   
  role      RoleType
  skills    String[]
  bio       String
  github    String?
  linkedin  String?
  website   String?
  premiumEndsAt        DateTime @default(now())
  premiumClass  PremiumClass @default(NONE)

  articles Article[]
}

model Article {
  id String @id
  createdAt DateTime @default(now()) @map("created_at")
  title String
  shortSummary String
  content String
  tags String[]
  
  author Profile @relation(fields: [authorId], references: [id])
  authorId String
}
